<div class="container" style="margin-top: 0px;">
  <p id="notice"><%= notice %></p>
   <div class="row title">
    <div class="col-md-8">
      <h2 >Post</h2>
    </div>
  <div class="col-md-4">
    <%= link_to 'Nuevo Post', new_post_path, class: "btn btn-info" %>
    <%= link_to "Nueva categoria" , new_category_path ,class: "btn btn-info"%>
  </div>
</div>
  <br>
<br>
<button data-toggle="collapse" data-target="#demo" class="btn btn-info">Filtros</button>
  <div id="demo" class="collapse">
    <br>
      <div class="container-fluid">
          <%= form_tag posts_path, :method => 'get' do%>
          <%= text_field_tag :search, params[:search], autocomplete: "off", :requerid => true, placeholder: "Buscar Por Titulo", class: "search", id: "prin"%>
          <%= submit_tag "Buscar", class: "btn btn-info"%>
          <%= link_to "Cancelar", posts_path, style: "display: none;", id: "cambio" %>
          <% end -%>
        <br>
      <br>
    </div>
    <br>
  </div>
  <br>
<br>
<div class="container-fluid">
    <% @post.each do |post| %>
      <ul class="list-group">
        <h4><%= link_to post.name, post%></h4>
          <br>
          <div class="contenido">
            
          
          <p><%== post.body %></p>
          </div>
          <br>
          <b>Escrito por:</b> <%= post.user.email if post.user%>
          <br>
          <b>Categoria: </b><%= post.category.name if post.category%>
          <br>
          <br> 
                  
          <div class="row">
          <div class="col-md-8">
              <%= link_to edit_post_path(post), class: "btn btn-info" do %>
              <span class="glyphicon glyphicon-wrench"></span>
              <% end %>

              <%= link_to post, method: :delete, data: { confirm: 'Estas Seguro?' }, class: "btn btn-danger" do%>
              <span class="glyphicon glyphicon-trash"></span>
              <% end -%>
          </div>
              <div class="col-md-4 text-right">
                  <%= link_to cambios_path(post.id),remote: true, method: :post do %>   
              <% if post.estado == true %>
                <span id="hola<%= post.id %>" class="glyphicon glyphicon-star" style = "font-size:30px;color:#eeee00"></span>
               
                <% else%>
               
                <span id="hola<%= post.id %>" class="glyphicon glyphicon-star" style = "font-size:30px;color:gray"></span>

              <% end -%>
            <% end -%>
              </div>
              
              
          </div>
      </ul>
    <% end %>
  </div>

 <div class="pagination">
        <%= will_paginate @post, renderer: BootstrapPagination::Rails, previous_label: "Anterior", next_label: "Siguiente", inner_window: 1, outer_window: 0 %>
      </div>

<br>
  
  <br>
<br>
</div>
<style>
  .contenido
  {
    max-height: 105px;
    overflow: hidden;
  }
  .container-fluid{

    padding: 0px;

  }

  .search{
    padding: 6px 10px;

  }

  a:hover{
    text-decoration: none;
  }

  ul{
    padding: 0px 0px 0px 0px ;
  }

  .list-group{
      border: 6px solid white;
      border-radius: 15px;
      background-color: white;
      padding: 10px 35px;
  }

  .glyphicon-heart{
    color: red;
   
  }

  body{
    background-color: #E5E8E8;
  }


  p{
    padding: 0px 0px !important;
    margin-bottom: 0px;
  }

  h4{
    margin-top: 0px;
    margin-bottom: 0px ;
  }
  b {
    color: #3361FF; 
    margin-bottom: 10px;
  }
</style>

<script>

   $(document).ready(function (){
    $("#prin").keyup(function () {
        $("#cambio").css({'display':'block'});
    });
  });


</script>