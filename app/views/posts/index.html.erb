<div class="container" style="margin-top: 0px;">
          <p id="notice"><%= notice %></p>
      <h1>Posts</h1>
        <br>

        <div class="container-fluid">
          <%= form_tag posts_path, :method => 'get' do%>
          <%= text_field_tag :search, params[:search], autocomplete: "off", :requerid => true, placeholder: "Buscar Por Titulo", class: "search"%>
          <%= submit_tag "Buscar", class: "btn btn-info"%>
          <br>
          <% end -%>
        <br>
        <br>
      </div>

<div class="container-fluid">
    <% @post.each do |post| %>
      <ul class="list-group">
        <h4><%= link_to post.name, post%></h4>
          <br>
          <p><%= post.body %></p>
          <br>
          <b>Escrito por:</b> <%= post.user.email if post.user%>
          <br>
          <b>Categoria: </b><%= post.category.name %>
          <br>
          <br> 
                  
          <div>
              <%= link_to edit_post_path(post), class: "btn btn-info" do %>
              <span class="glyphicon glyphicon-eye-open"></span>
              <% end %>

              <%= link_to post, method: :delete, data: { confirm: 'Estas Seguro?' }, class: "btn btn-danger" do%>
              <span class="glyphicon glyphicon-trash"></span>
              <% end -%>
              
              <%= link_to cambios_path(post.id),remote: true, method: :post do %>   
              <% if post.estado == true %>
                <span id="hola<%= post.id %>" class="glyphicon glyphicon-heart" style = "font-size:30px;"></span>
               
                <% else%>
               
                <span id="hola<%= post.id %>" class="glyphicon glyphicon-heart" style = "font-size:30px;color:black"></span>

              <% end -%>
            <% end -%>
          </div>
      </ul>
    <% end %>
  </div>

 <div class="pagination">
        <%= will_paginate @post, renderer: BootstrapPagination::Rails, previous_label: "Anterior", next_label: "Siguiente", inner_window: 1, outer_window: 0 %>
      </div>

<br>
  <%= link_to 'Nuevo Post', new_post_path, class: "btn btn-info" %>
  <%= link_to "Nueva categoria" , new_category_path ,class: "btn btn-info"%>
  <br>
<br>
</div>
<style>

  .container-fluid{

    padding: 0px;

  }

  .search{
    padding: 6px 10px;
    border-right: none;
    border-left: none;
    border-top: none;
    border-color: blue;
    background-color: #E5E8E8;


  }

  a:hover{
    text-decoration: none;
  }

  ul{
    padding: 0px 0px 0px 0px ;
  }

  .list-group{
      border: 6px solid white;
      border-radius: 15px;
      background-color: white;
      padding: 10px 10px;
  }

  .glyphicon-heart{
    color: red;
    background-color: red;
  }

  body{
    background-color: #E5E8E8;
  }


  p{
    padding: 0px 0px !important;
    margin-bottom: 0px;
  }

  h4{
    margin-top: 0px;
    margin-bottom: 0px ;
  }
  b {
    color: #3361FF; 
    margin-bottom: 10px;
  }
</style>