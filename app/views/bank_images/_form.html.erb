<div id="product-modal" class="modal fade">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style="padding: 0px;">
    
            <div class="container-fluid" style="background-color: black;">
              <div class="col-md-9">
                  <% if action_name == "edit"%>
                    <br>
                    <h4 class="modal-title">Editar Imagenes</h4>
                    <br>
                  <%else%>
                    <br>
                    <h4 class="modal-title">Crear Imagenes</h4>
                    <br>
                  <% end -%>
              </div>

              <div class="col-md-3 text-right " style="padding-top: 10px !important; padding: 0px;">
                <img width="55px" src="https://mybc1.s3.amazonaws.com/uploads/rseguimiento/evidencia/183/Isotipo_dnuba__2_-01.png">
              </div>
            
            </div>

        </div>
         <%= form_with(model: bank_image, local: true) do |form| %>
      <div class="modal-body">

      <% if bank_image.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(bank_image.errors.count, "error") %> prohibited this bank_image from being saved:</h2>

          <ul>
          <% bank_image.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :Titulo %><br>
        <%= form.text_field :title, id: :bank_image_title, class: "form form-control", id: "text" %>
      </div>
      <br>

      <div class="field">
        <%= form.label :Description %><br>
        <%= form.text_area :description, id: :bank_image_description, class: "form form-control", id: "text-area" %>
      </div>

      <br>

      <div class="field">
        <%= form.label :achivo %><br>
        <%= form.file_field :achivo, id: :bank_image_achivo %>
      </div>
      <br>

      <%= form.hidden_field :user_id, :value => current_user.id%><br>

      </div> 
        <div class="modal-footer"">

           <%= form.submit "Guardar", class: "btn btn-info", id: "btn3" %>
          <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button> 
         <% end -%>
    </div>
  </div>
</div>
<style>

  .modal-body{
    padding-bottom: 0px;
  }

  .modal-footer{
    background-color: black;
    padding: 10px;
    border-bottom: 4px solid #40A2DE;
  }

  .modal-header{
    border-top: 4px solid #40A2DE;
  }

  h4{
    font-size: 22px;
    color: #40A2DE;
    text-transform: capitalize;
  }

  #btn3{
    background-color: #40A2DE;
    border-color: #40A2DE;
  }

  #text-area{

    width: 100%;
    height: 135px;
    resize: none;
  }

  #text{
    width: 235px;
  }

</style>