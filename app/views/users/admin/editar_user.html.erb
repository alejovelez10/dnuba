<div class="container" style="margin-top: 40px; padding: 0px;" >
<div class="row title">
  <div class="col-md-8">
      <h2 >Editar Usuario</h2>
  </div>
</div>
<br>
<br>
    <div class="col-md-4" style="padding: 0px;">
        <%= form_tag update_user_path  do%>
          <%= devise_error_messages! %>
          <div class="field">
            <%= label_tag :email %>
            <%= email_field_tag :email, @user.email,  autofocus: true,  autocomplete: "off", class: "form form-control", :required => true%>
          </div>
    </div>
    <div class="col-md-4">
          <div class="field">
            <%= label_tag :Contraseña %>
            <%= password_field_tag :password, nil, autofocus: true,  autocomplete: "off", class: "form form-control"%>
          </div>
    </div>
    <div class="col-md-4">
          <div class="field">
            <%= label_tag :Confirmar_Contraseña %>
            <%= password_field_tag :password_confirmation, nil, autofocus: true, autocomplete: "off", class: "form form-control"%>
          </div>  
    </div>
    <br>
    <br>
    <br>
    <%=hidden_field_tag :id, @user.id%>
          <div class="actions"><br>
            <%= submit_tag "Guardar", class: "btn btn-info"%>
            <%= link_to "Volver", usuarios_path, class: "btn btn-info" %>
          </div>

       <% end %>
    </div>
  </div>