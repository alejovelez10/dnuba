<p id="notice"><%= notice %></p>



<div class="row title">
  <div class="col-md-8">
      <h2 >CENTROS DE COSTOS</h2>
  </div>
  <div class="col-md-4">
      <%= link_to 'Crear', new_cost_center_path, class: "btn btn-primary" %>
  </div>
  
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Codigo</th>
      <th>Ingresos</th>
      <th>Gastos</th>
      <th>Diferencia</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cost_centers.each do |cost_center| %>
      <tr>
        <td><%= cost_center.name %></td>
        <td><%= cost_center.code %></td>
        <td><%= number_to_currency(cost_center.incomes.sum(:value)).chomp(".00") %></td>
        <td><%= number_to_currency(cost_center.general_spends.sum(:value)).chomp(".00") %></td>
        <td><%= number_to_currency(cost_center.incomes.sum(:value) - cost_center.general_spends.sum(:value)).chomp(".00") %></td>

        <td><%= link_to 'Ver', cost_center %></td>
        <td><%= link_to 'Editar', edit_cost_center_path(cost_center) %></td>
        <td><%= link_to 'Eliminar', cost_center, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


