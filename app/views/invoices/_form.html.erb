          <div class="col-md-3 no-padding-right">
            <%= form.label "Ciudad" %>
            <%= form.text_field :city, id: :invoice_city, class: "form form-control", :placeholder => "Ciudad" %>
          </div>

          <div class="col-md-3 no-padding-right">
            <%= form.label "Direccion" %>
            <%= form.text_field :address, id: :invoice_address, class: "form form-control", :placeholder => "Direccion" %>
            <br>
          </div>

          <div class="col-md-3 no-padding-left">
            <%= form.label "Telefono" %>
            <%= form.text_field :phone, id: :invoice_phone, class: "form form-control", :placeholder => "Telefono" %>
          </div>

          <div class="col-md-3">
