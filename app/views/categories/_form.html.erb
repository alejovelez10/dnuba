<div class="container" style="margin-top: 10px; padding: 0px;">
  <div class="col-md-4 col-md-offset-0" style="padding: 0px;">
    <%= form_with(model: category, local: true) do |form| %>
      <% if category.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

          <ul>
          <% category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
        <div class="field">
          <%= form.label :Nombre %><br>
          <%= form.text_field :name, id: :category_name, :required => true, class: "form form-control"   %>
        </div>
        <br>
        <div class="field">
          <%= form.label :Descripcion %><br>
          <%= form.text_area :description, id: :category_description, class: "form form-control" %>
        </div>
        <br>
        <div class="actions">
          <%= form.submit "Guardar", class: "btn btn-info"%>
        </div>
        <br>
      <% end %>
  </div>
</div>




